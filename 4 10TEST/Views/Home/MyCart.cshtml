@using Library.Data
@using _4_10TEST.Models;
@model CartVeiwModels


<div class="container">
    <br />
    <h3>My Cart</h3>
    <br />
    <table class="table table-striped table-bordered">
        <tr>
            <th style="text-align:center;vertical-align:middle;">Product</th>
            <th style="text-align:center;vertical-align:middle;">Unit Price</th>
            <th style="text-align:center;vertical-align:middle;">Quantity</th>
            <th style="text-align:center;vertical-align:middle;">Delete</th>
            <th style="text-align:center;vertical-align:middle;">Total</th>

        </tr>

        @foreach (ShoppingCartItems sc in Model.CartItems)
        {
            <tr>
                <td> <a href="/home/Products?id=@sc.ProductId">@sc.ProductName</a></td>
                <td>@sc.Price.ToString("C")</td>

                <td>
                    <form action="/home/editItem" method="post">
                        <input type="text" name="quantity" value=@sc.Quantity />
                        <input type="hidden" name="ProductId" value=@sc.ProductId />
                        <button class="btn btn-primary">Update Quantity</button>
                    </form>
                </td>
                <td>
                    <form action="/home/deletefromcart" method="post">
                        <input type="hidden" name="ItemId" value=@sc.ProductId />
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>

                <td>$@(sc.Quantity * sc.Price)</td>
            </tr>
        }

    </table>
    <div class="container  col-md-3">
        <div class="form-control media-right " style="font-style:bold; font-size:larger "> </div>
    </div>
</div>



